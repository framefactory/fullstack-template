{
  "name": "fullstack-template",
  "version": "1.2.0",
  "description": "Full-stack application template with Typescript, Lit, SCSS",
  "scripts": {
    "start": "npm run server",
    "server": "tsc -b src/server; nodemon services/server/bin/index.js",
    "dev2": "tsc -b src/server; concurrently \"cd src/client && webpack --color -w --mode=development --env component=$WATCH_COMPONENT\"",
    "dev": "tsc -b src/server; concurrently \"cd src/client && webpack --color -w --mode=development --env component=all\" \"tsc -b -w src/server\" \"nodemon services/server/bin/index.js\"",
    "dev:component": "tsc -b src/server; concurrently \"cd src/client && webpack --color -w --mode=development --env component=$WATCH_COMPONENT\" \"tsc -b -w src/server\" \"nodemon services/server/bin/index.js\"",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\"",
    "build:server": "tsc -b src/server",
    "build:client": "cd src/client; webpack --color; cd ../..",
    "build:client:prod": "cd src/client; webpack --color --env component=all --mode=production; cd ../..",
    "build:client:dev": "cd src/client; webpack --color --env component=all --mode=development; cd ../..",
    "clean": "rm -rf services/server/bin; rm -rf services/server/public/built",
    
    "up": "bash -c 'WATCH_COMPONENT=${0/#bash/default} NPM_SCRIPT=dev:component docker-compose up -d; docker-compose logs -f'",
    "down": "docker-compose stop; docker-compose rm -f -v",
    "restart": "npm run down; npm run up",
    "dev:install": "docker-compose exec server npm install",
    "bash": "docker-compose exec server bash",
    "dev:bash": "docker run -ti --rm -p 9000:9000 -v ${PWD}:'/app'  framefactory/node bash"
  },
  "nodemonConfig": {
    "delay": 500,
    "watch": [
      "services/server/bin/**/*"
    ]
  },
  "_moduleAliases": {
    "@ff/core": "libs/ff-core/built/export"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framefactory/fullstack-template.git"
  },
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "email": "opensource@framefactory.ch",
      "url": "https://github.com/framefactory"
    }
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/framefactory/fullstack-template/issues"
  },
  "homepage": "https://github.com/framefactory/fullstack-template#readme",
  "dependencies": {
    "@framefactory/core": "file:libs/core",
    "debug": "^4.3.4",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "lit": "^2.2.4",
    "morgan": "^1.10.0",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/debug": "4.1.7",
    "@types/express": "4.17.13",
    "@types/morgan": "1.9.3",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "child_process": "^1.0.2",
    "copy-webpack-plugin": "^11.0.0",
    "concurrently": "^7.2.1",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "7.2.11",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "raw-loader": "^4.0.2",
    "sass-loader": "^13.0.0",
    "source-map-loader": "^3.0.1",
    "style-loader": "3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  }
}
