{
  "name": "fullstack-template",
  "version": "0.1.0",
  "description": "Full-stack application template",
  "scripts": {
    "start": "npm run build:api && npm run dev",
    "dev": "concurrently \"cd source/client && webpack --mode=development --color --watch\" \"tsc -b source/api -w\" \"nodemon services/api/bin/index.js\"",
    "build": "concurrently \"npm run build:client\" \"npm run build:api\"",
    "build:client": "cd source/client && webpack --mode=development --color",
    "build:api": "tsc -b source/api",
    "clean": "rm -rf services/api/bin; rm -rf services/api/public/built",
    "up": "docker-compose up -d; docker-compose logs -f",
    "down": "docker-compose stop; docker-compose rm -f -v",
    "restart": "docker-compose stop; docker-compose rm -f -v; docker-compose up -d; docker-compose logs -f",
    "bash": "docker-compose exec api bash"
  },
  "nodemonConfig": {
    "delay": 500,
    "watch": [
      "services/api/bin/**/*"
    ]
  },
  "_moduleAliases": {
    "@ff/core": "libs/ff-core/exports"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framelab/fullstack-template.git"
  },
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "url": "https://github.com/framefactory"
    }
  ],
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/framelab/fullstack-template/issues"
  },
  "homepage": "https://github.com/framelab/fullstack-template#readme",
  "dependencies": {
    "@types/node": "^13.13.4",
    "child_process": "^1.0.2",
    "concurrently": "^5.2.0",
    "css-loader": "^3.5.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.2.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "node-sass": "^4.14.0",
    "nodemon": "^2.0.3",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "terser-webpack-plugin": "^2.3.6",
    "ts-loader": "^7.0.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "arangojs": "^6.14.0",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
